# ==========================================
# PICKDRIVE - Environment Variables
# ==========================================
# Copy this file to .env.local and fill in values
# Variables marked [REQUIRED] must be set for the app to work
# Variables marked [OPTIONAL] have defaults or enable optional features

# --- Supabase [REQUIRED] ---
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# --- App Configuration [REQUIRED] ---
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- PawaPay (Primary Payment Provider) [REQUIRED if USE_PAWAPAY=true] ---
USE_PAWAPAY=true
PAWAPAY_API_TOKEN=
PAWAPAY_BASE_URL=https://api.sandbox.pawapay.cloud
PAWAPAY_ENVIRONMENT=sandbox

# --- MTN MoMo (Fallback / Direct) [REQUIRED if USE_PAWAPAY=false] ---
MOMO_SUBSCRIPTION_KEY=
MOMO_API_KEY=
MOMO_TARGET_ENVIRONMENT=sandbox
MOMO_CALLBACK_HOST=
MOMO_COLLECTION_PRIMARY_KEY=
MOMO_COLLECTION_USER_ID=
MOMO_DISBURSEMENT_API_USER=
MOMO_DISBURSEMENT_API_KEY=
MOMO_DISBURSEMENT_SUBSCRIPTION_KEY=
MOMO_WEBHOOK_SECRET=

# --- Direct MTN MoMo (Overrides above if set) [OPTIONAL] ---
DIRECT_MOMO_APIM_SUBSCRIPTION_KEY=
DIRECT_MOMO_API_KEY=
DIRECT_MOMO_API_USER=
DIRECT_MOMO_COLLECTION_PRIMARY_KEY=
DIRECT_MOMO_COLLECTION_USER_ID=
DIRECT_MOMO_TARGET_ENVIRONMENT=sandbox
DIRECT_MOMO_CALLBACK_HOST=
DIRECT_MOMO_API_USER_DISBURSMENT=
DIRECT_MOMO_API_KEY_DISBURSMENT=
DIRECT_MOMO_APIM_PAY_OUT_SUBSCRIPTION_KEY=

# --- Orange Money [OPTIONAL] ---
ORANGE_MONEY_MERCHANT_ID=
ORANGE_MONEY_MERCHANT_KEY=
ORANGE_MONEY_ENVIRONMENT=sandbox
ORANGE_MONEY_NOTIFICATION_URL=
ORANGE_MONEY_RETURN_URL=

# --- Direct Orange Money (Overrides above if set) [OPTIONAL] ---
DIRECT_OM_MERCHAND_NUMBER=
DIRECT_OM_ENVIRONMENT=sandbox
DIRECT_OM_CALLBACK_URL=
DIRECT_OM_CONSUMER_USER=
DIRECT_OM_CONSUMER_SECRET=
DIRECT_OM_API_USERNAME=
DIRECT_OM_API_PASSWORD=
DIRECT_OM_PIN_CODE=
DIRECT_OM_TOKEN_URL=
DIRECT_OM_BASE_URL=

# --- WhatsApp Business API [REQUIRED for notifications] ---
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=
META_APP_SECRET=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=pikdrive_verify
WHATSAPP_API_VERSION=v24.0

# --- Twilio (SMS / OTP Fallback) [REQUIRED for SMS OTP] ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_MESSAGE_SERVICE_SID=
TWILIO_FROM_NUMBER=
SEND_SMS_HOOK_SECRET=

# --- OTP Delivery Config [OPTIONAL - controls WhatsApp vs SMS split] ---
OTP_WHATSAPP_PERCENTAGE=100
OTP_USE_WHATSAPP_KILL_SWITCH=false
OTP_WHATSAPP_TEMPLATE_NAME=

# --- OneSignal (Push Notifications) [REQUIRED for push] ---
NEXT_PUBLIC_ONESIGNAL_APP_ID=
NEXT_PUBLIC_ONESIGNAL_API_KEY=
NEXT_PUBLIC_ONESIGNAL_SAFARI_WEB_ID=

# --- Sandbox Testing [OPTIONAL - sandbox only] ---
SANDBOX_PAWAPAY_TEST_PHONE=
SANDBOX_MTN_TEST_PHONE=

# --- Cron Job Security [REQUIRED for cron endpoints] ---
CRON_SECRET=

# --- Storage / Caching [OPTIONAL] ---
NEXT_PUBLIC_ASSET_VERSION=V1
